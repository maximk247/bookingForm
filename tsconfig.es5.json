{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "./",
        "sourceMap": true,
        "declaration": false,
        "downlevelIteration": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "module": "es2020",
        "lib": [
            "es2018",
            "dom"
        ],
        "target": "es5",
        "outDir": "./out-tsc/app",
        "paths": {
            "@app/*": [
                "src/app/*"
            ],
            "@environments/*": [
                "src/environments/*"
            ],
            "@env/*": [
                "src/environments/*"
            ],
            "@home/*": [
                "src/app/modules/home/*"
            ],
            "@shared/*": [
                "src/app/modules/shared/*"
            ],
            "@navigation/*": [
                "src/app/modules/navigation/*"
            ]
        },
        "types": []
    },
    "files": [
        "src/main.ts",
        "src/polyfills.ts"
    ],
    "include": [
        "src/**/*.d.ts"
    ],
    "angularCompilerOptions": {
        "strictTemplates": false
    }
}
